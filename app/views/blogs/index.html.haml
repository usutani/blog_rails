%p{:id =>"notice"} #{notice}
%h1 Listing Blogs

%table
  %thead
    %tr
      %th Title
      %th{:colspan =>"3"}
  %tbody
    - @blogs.each do |blog|
      %tr
        %td{:class=>"title"} #{blog.title}
        %td{:class=>"link-show"} #{link_to 'Show', blog}
        %td{:class=>"link-edit"} #{link_to 'Edit', edit_blog_path(blog)}
        %td{:class=>"link-destroy"} #{link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } }
%br

= link_to 'New Blog', new_blog_path
