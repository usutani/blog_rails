= form_for([@entry.blog, @entry]) do |f|
  - if @entry.errors.any?
    #error_explanation
      %h2 #{pluralize(@entry.errors.count, "error")} prohibited this entry from being saved:

      %ul
      - @entry.errors.full_messages.each do |message|
        %li #{ message }

  .field
    = f.label :title
    %br
    = f.text_field :title
  .field
    = f.label :body
    %br
    = f.text_area :body
  .field
    /= f.label :blog_id
    = f.hidden_field :blog_id, :value => @entry.blog_id
  .actions
    = f.submit "Save"
